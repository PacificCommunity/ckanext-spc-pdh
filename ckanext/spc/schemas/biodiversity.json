{
  "scheming_version": 1,
  "dataset_type": "biodiversity_data",
  "about": "Biodiversity data",
  "about_url": "http://github.com/ckan/ckanext-scheming",
  "field_groups": [
    {
      "name": "Dataset Type",
      "id": "dataset_type",
      "fields_list":
      [
        "title",
        "name",
        "thematic_area_string",
        "license_id",
        "purpose",
        "owner_org",
        "language",
        "pub_place"
      ]
    },
    {
      "name": "Maintenance",
      "id": "maintenance",
      "fields_list":
      [
        "notes",
        "update_freq"
      ]
    },
    {
      "name": "Change History",
      "id": "change_history",
      "fields_list":
      [
        "change_scope",
        "old_value",
        "change_date",
        "comment"
      ]
    },
    {
      "name": "Contact",
      "id": "contact",
      "fields_list":
      [
        "organization_name",
        "position_name",
        "phone",
        "email",
        "online_url",
        "user_id"
      ]
    },
    {
      "name": "Individual Name",
      "id": "individual_name",
      "fields_list":
      [
        "surname",
        "given_name",
        "salutation"
      ]
    },
    {
      "name": "Adress",
      "id": "adress",
      "fields_list":
      [
        "delivery_point",
        "city",
        "administrative_area",
        "postal_code",
        "country"
      ]
    },
    {
      "name": "Methods",
      "id": "methods",
      "fields_list":
      [
        "method_step",
        "sampling",
        "quality_control"
      ]
    }
  ],
  "dataset_fields": [
    {
      "field_name": "alternate_identifier",
      "label": "Alternate Identifier",
      "help_text": "This is the only identifier issued by the IPT for the metadata document; it is a UUID",
      "validators": "ignore_empty spc_to_json",
      "output_validators": "spc_from_json"
    },
    {
      "field_name": "title",
      "label": "Title",
      "preset": "title"
    },
    {
      "field_name": "name",
      "label": "URL",
      "preset": "dataset_slug",
      "form_placeholder": "eg. my-dataset"
    },
    {
      "field_name": "thematic_area_string",
      "label": "Topic",
      "preset": "multiple_select",
      "choices": [
        {
          "label": "Social",
          "value": "Social"
        },
        {
          "label": "Statistics",
          "value": "Statistics"
        },
        {
          "label": "Climate Change",
          "value": "Climate Change"
        },
        {
          "label": "Fisheries",
          "value": "Fisheries"
        },
        {
          "label": "Geoscience",
          "value": "Geoscience"
        },
        {
          "label": "Land Resources",
          "value": "Land Resources"
        },
        {
          "label": "Human Rights",
          "value": "Human Rights"
        },
        {
          "label": "Health",
          "value": "Health"
        },
        {
          "label": "Energy",
          "value": "Energy"
        },
        {
          "label": "Education",
          "value": "Education"
        },
        {
          "label": "Economic Development",
          "value": "Economic Development"
        },
        {
          "label": "PCCOS",
          "value": "PCCOS"
        }
      ]
    },
    {
      "field_name": "license_id",
      "label": "License",
      "form_snippet": "license.html",
      "help_text": "License definitions and additional information can be found at http://opendefinition.org/"
    },
    {
      "field_name": "owner_org",
      "label": "Publisher",
      "preset": "dataset_organization"
    },
    {
      "field_name": "creator",
      "label": "Creator",
      "form_snippet": "markdown.html",
      "help_text": "The creator is the person who created the resource (not necessarily the author of this metadata about the resource). This is the person or institution to contact with questions about the use, interpretation of a dataset.",
      "required": true,
      "validators": "construct_sub_schema(creator) scheming_required spc_to_json",
      "output_validators": "spc_from_json"
    },
    {
      "field_name": "metadata_provider",
      "label": "Metadata Provider",
      "form_snippet": "markdown.html",
      "help_text": "The party responsible for the creation of the metadata document",
      "required": true,
      "validators": "construct_sub_schema(metadata_provider) scheming_required spc_to_json",
      "output_validators": "spc_from_json"
    },
    {
      "field_name": "associated_party",
      "label": "Associated Party",
      "validators": "construct_sub_schema(associated_party) ignore_empty spc_to_json",
      "output_validators": "spc_from_json"
    },
    {
      "field_name": "pub_date",
      "label": "Publication Date",
      "required": true,
      "validators": "scheming_required"
    },
    {
      "field_name": "language",
      "label": "Language",
      "form_snippet": "language.html"
    },
    {
      "field_name": "notes",
      "label": "Abstract",
      "form_snippet": "markdown.html",
      "required": true,
      "validators": "copy_from(abstract) scheming_required"

    },
    {
      "field_name": "tag_string",
      "label": "Keyword Set",
      "preset": "tag_string_autocomplete",
      "form_placeholder": "eg. economy, mental health, government",
      "validators": "copy_from(keyword_set) ignore_missing tag_string_convert"
    },
    {
      "field_name": "additional_info",
      "label": "Additional Info",
      "form_snippet": "markdown.html"
    },
    {
      "field_name": "intellectual_rights",
      "label": "Intellectual Rights",
      "form_snippet": "markdown.html"
    },
    {
      "field_name": "distribution",
      "label": "Distribution"
    },
    {
      "field_name": "coverage",
      "label": "Coverage",
      "required": false,
      "validators": "construct_sub_schema(coverage) scheming_required spc_to_json",
      "output_validators": "spc_from_json"

    },
    {
      "field_name": "purpose",
      "label": "Purpose",
      "help_text": "A description of the purpose of this dataset."
    },
    {
      "field_name": "maintenance",
      "label": "Maintenance",
      "validators": "construct_sub_schema(maintenance) ignore_missing spc_to_json",
      "output_validators": "spc_from_json"
    },
    {
      "field_name": "contact",
      "label": "Contact",
      "required": true,
      "validators": "construct_sub_schema(contact) scheming_required spc_to_json",
      "output_validators": "spc_from_json"
    },
    {
      "field_name": "methods",
      "label": "Methods",
      "required": false,
      "validators": "construct_sub_schema(methods) scheming_required spc_to_json",
      "output_validators": "spc_from_json"
    },
    {
      "field_name": "project",
      "label": "Project",
      "required": false,
      "validators": "construct_sub_schema(project) scheming_required spc_to_json",
      "output_validators": "spc_from_json"
    },
    {
      "field_name": "member_countries",
      "label": "Member countries",
      "preset": "member_countries"
    }
  ],
  "resource_fields": [
    {
      "field_name": "url",
      "label": "URL",
      "preset": "resource_url_upload"
    },
    {
      "field_name": "name",
      "label": "Name",
      "form_placeholder": "eg. January 2011 Gold Prices"
    },
    {
      "field_name": "description",
      "label": "Description",
      "form_snippet": "markdown.html",
      "form_placeholder": "Some useful notes about the data"
    },
    {
      "field_name": "format",
      "label": "Format",
      "preset": "resource_format_autocomplete"
    }
  ]
}
