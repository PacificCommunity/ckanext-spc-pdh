{
  "scheming_version": 1,
  "dataset_type": "publications",
  "about": "Publications",
  "about_url": "http://github.com/ckan/ckanext-scheming",
  "dataset_fields": [
    {
      "field_name": "title",
      "label": "Title",
      "preset": "title",
      "dc_ns": "dc"
    },
    {
      "field_name": "name",
      "label": "URL",
      "preset": "dataset_slug",
      "form_placeholder": "eg. my-dataset"
    },
    {
      "field_name": "thematic_area_string",
      "label": "Topic",
      "preset": "multiple_select",
      "choices": [
        {
          "label": "Social",
          "value": "Social"
        },
        {
          "label": "Statistics",
          "value": "Statistics"
        },
        {
          "label": "Climate Change",
          "value": "Climate Change"
        },
        {
          "label": "Fisheries",
          "value": "Fisheries"
        },
        {
          "label": "Geoscience",
          "value": "Geoscience"
        },
        {
          "label": "Land Resources",
          "value": "Land Resources"
        },
        {
          "label": "Human Rights",
          "value": "Human Rights"
        },
        {
          "label": "Health",
          "value": "Health"
        },
        {
          "label": "Energy",
          "value": "Energy"
        },
        {
          "label": "Education",
          "value": "Education"
        },
        {
          "label": "Economic Development",
          "value": "Economic Development"
        },
        {
          "label": "PCCOS",
          "value": "PCCOS"
        }
      ]
    },
    {
      "field_name": "creator",
      "label": "Creator",
      "help_text": "An entity primarily responsible for making the resource. Examples of a Creator include a person, an organization, or a service.",
      "dc_ns": "dc",
      "validators": "ignore_missing spc_to_json",
      "output_validators": "spc_from_json",
      "display_snippet": "simple_list.html",
      "form_snippet": "simple_list.html"
    },
    {
      "field_name": "tag_string",
      "label": "Tags",
      "preset": "tag_string_autocomplete",
      "form_placeholder": "eg. economy, mental health, government",
      "validators": "ignore_missing tag_string_convert"
    },
    {
      "field_name": "subject",
      "label": "Subject",
      "dc_ns": "dc",
      "dc_name": "subject",
      "validators": "ignore_missing spc_to_json",
      "output_validators": "spc_from_json",
      "display_snippet": "simple_list.html",
      "form_snippet": "simple_list.html"
    },
    {
      "field_name": "notes",
      "label": "Description",
      "form_snippet": "markdown.html",
      "create_validators": "copy_from(description) ignore_missing",
      "dc_ns": "dc",
      "dc_name": "description"
    },
    {
      "field_name": "owner_org",
      "label": "Organization",
      "preset": "dataset_organization"
    },
    {
      "field_name": "publisher",
      "label": "Publisher",
      "dc_ns": "dc",
      "validators": "ignore_missing spc_to_json",
      "output_validators": "spc_from_json",
      "display_snippet": "simple_list.html",
      "form_snippet": "simple_list.html"
    },
    {
      "field_name": "contributor",
      "label": "Contributor",
      "help_text": "An entity responsible for making contributions to the resource.",
      "dc_ns": "dc",
      "validators": "ignore_missing spc_to_json",
      "output_validators": "spc_from_json",
      "display_snippet": "simple_list.html",
      "form_snippet": "simple_list.html"
    },
    {
      "field_name": "date",
      "label": "Date",
      "help_text": "Date (often a range)",
      "preset": "date",
      "dc_ns": "dc",
      "validators": "ignore_missing spc_to_json",
      "output_validators": "spc_from_json",
      "display_snippet": "simple_list.html",
      "form_snippet": "simple_list.html"
    },
    {
      "field_name": "publication_type",
      "label": "Type",
      "help_text": "The nature or genre of the resource.",
      "dc_ns": "dc",
      "validators": "ignore_missing spc_to_json",
      "output_validators": "spc_from_json",
      "display_snippet": "simple_list.html",
      "form_snippet": "simple_list.html"
    },
    {
      "field_name": "format",
      "label": "Format",
      "dc_ns": "dc",
      "validators": "ignore_missing spc_to_json",
      "output_validators": "spc_from_json",
      "display_snippet": "simple_list.html",
      "form_snippet": "simple_list.html"
    },
    {
      "field_name": "identifier",
      "label": "Identifier",
      "help_text": "An unambiguous reference to the resource within a given context.",
      "dc_ns": "dc",
      "validators": "ignore_missing spc_to_json",
      "output_validators": "spc_from_json",
      "display_snippet": "simple_list.html",
      "form_snippet": "simple_list.html"
    },
    {
      "field_name": "source",
      "label": "Source",
      "help_text": "A related resource from which the described resource is derived.",
      "dc_ns": "dc",
      "validators": "ignore_missing spc_to_json",
      "output_validators": "spc_from_json",
      "display_snippet": "simple_list.html",
      "form_snippet": "simple_list.html"
    },
    {
      "field_name": "language",
      "label": "Language",
      "form_snippet": "language.html",
      "dc_ns": "dc",
      "validators": "ignore_missing spc_to_json",
      "output_validators": "spc_from_json",
      "display_snippet": "simple_list.html",
      "form_snippet": "simple_list.html"
    },
    {
      "field_name": "relation",
      "label": "Relation",
      "dc_ns": "dc",
      "validators": "ignore_missing spc_to_json",
      "output_validators": "spc_from_json",
      "display_snippet": "simple_list.html",
      "form_snippet": "simple_list.html"
    },
    {
      "field_name": "spatial",
      "label": "Coverage",
      "form_placeholder": "{}",
      "form_snippet": "spatial.html",
      "display_snippet": "spatial.html",
      "validators": "copy_from(coverage) ignore_empty",
      "dc_ns": "dcterms",
      "dc_name": "coverage"
    },
    {
      "field_name": "rights",
      "label": "Rights",
      "help_text": "Information about rights held in and over the resource. Typically, rights information includes a statement about various property rights associated with the resource, including intellectual property rights.",
      "dc_ns": "dc",
      "validators": "ignore_missing spc_to_json",
      "output_validators": "spc_from_json",
      "display_snippet": "simple_list.html",
      "form_snippet": "simple_list.html"
    },
    {
      "field_name": "license_id",
      "label": "License",
      "form_snippet": "license.html",
      "help_text": "License definitions and additional information can be found at http://opendefinition.org/",
      "dc_ns": "dcterms",
      "dc_group": "rights"
    },
    {
      "field_name": "member_countries",
      "label": "Member countries",
      "preset": "member_countries",
      "form_snippet": "multiple_select.html",
      "display_snippet": "multiple_choice.html",
      "validators": "scheming_multiple_choice",
      "output_validators": "scheming_multiple_choice_output"
    }
  ],
  "resource_fields": [
    {
      "field_name": "url",
      "label": "URL",
      "preset": "resource_url_upload"
    },
    {
      "field_name": "name",
      "label": "Name",
      "form_placeholder": "eg. January 2011 Gold Prices"
    },
    {
      "field_name": "description",
      "label": "Description",
      "form_snippet": "markdown.html",
      "form_placeholder": "Some useful notes about the data"
    },
    {
      "field_name": "format",
      "label": "Format",
      "preset": "resource_format_autocomplete"
    }
  ]
}
